<h1>Listing users</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Sex</th>
    <th>Startdate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.sex %></td>
    <td><%= user.startdate %></td>
    <td>
    	<%= link_to 'Show', user, :class => "btn btn-primary" %>
    </td>
    <td>
    	<%= link_to 'Edit', edit_user_path(user), :class => "btn btn-warning" %>
    </td>
    <td>
    	<%= link_to 'Destroy', user, method: :delete, :class => "btn btn-danger", data: { confirm: 'Are you sure?'} %>
    </td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New User', new_user_path, :class => "btn" %>

