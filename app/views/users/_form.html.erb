<%= simple_form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :sex, collection: [ "Male", "Female" ], as: :radio_buttons, label: "Gender" %>
    <%= f.input :startdate, label: "Date Started" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
